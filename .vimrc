set mouse=a
set nocompatible
filetype on
filetype plugin on
filetype indent on
syntax on

set number
set cursorline
set shiftwidth=4
set tabstop=4
set expandtab
set nowrap
set scrolloff=10
set incsearch
set ignorecase
set smartcase
set showcmd
set showmode
set showmatch
set hlsearch
set history=1000
set wildmenu
set wildmode=list:longest
